---
// index.astro - Homepage
// Imports all components and assembles the full page

import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <Header />
  <main>
    <Hero />

    <!-- Services Section -->
    <Services />
    
    <section id="how-it-works" class="section-padding bg-warm-white">
      <div class="container-custom text-center">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-forest mb-4">How It Works</h2>
        <p class="text-stone text-lg">Coming Day 2 - 4-step process visualization</p>
      </div>
    </section>
    
    <section id="pricing" class="section-padding bg-cream">
      <div class="container-custom text-center">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-forest mb-4">Pricing Calculator</h2>
        <p class="text-stone text-lg">Coming Day 3 - Interactive pricing tool</p>
      </div>
    </section>
    
    <section id="samples" class="section-padding bg-warm-white">
      <div class="container-custom text-center">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-forest mb-4">Listen to Samples</h2>
        <p class="text-stone text-lg">Coming Day 4 - Custom audio player</p>
      </div>
    </section>
    
    <section id="faq" class="section-padding bg-cream">
      <div class="container-custom text-center">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-forest mb-4">FAQ</h2>
        <p class="text-stone text-lg">Coming Day 4 - Accordion FAQ section</p>
      </div>
    </section>
    
    <section id="contact" class="section-padding bg-forest text-white">
      <div class="container-custom text-center">
        <h2 class="font-display text-3xl md:text-4xl font-bold mb-4">Ready to Create Your Song?</h2>
        <p class="text-white/80 text-lg mb-6">Coming Day 5 - Contact form with Netlify integration</p>
        <a href="mailto:hello@bitterrootsound.com" class="btn-primary inline-block">
          Get in Touch
        </a>
      </div>
    </section>
    
  </main>
  <Footer />
</Layout>
