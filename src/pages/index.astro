---
// index.astro - Homepage
// Imports all components and assembles the full page

import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import HowItWorks from '../components/HowItWorks.astro';
import Testimonials from '../components/Testimonials.astro';
import FAQ from '../components/FAQ.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <Header />
  <main>
    <Hero />

    <!-- Services Section -->
    <Services />

    <!-- How It Works Section -->
    <HowItWorks />

    <!-- Testimonials Section -->
    <Testimonials />

    <!-- FAQ Section -->
    <FAQ />

    <!-- Contact Section -->
    <Contact />

    <!-- Placeholder sections for future development -->
    <section id="samples" class="section-padding bg-warm-white">
      <div class="container-custom text-center">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-forest mb-4">Listen to Samples</h2>
        <p class="text-stone text-lg">Coming soon - Custom audio player with song samples</p>
      </div>
    </section>
    
  </main>
  <Footer />
</Layout>
